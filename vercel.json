{
  "version": 2,
  "builds": [
    {
      "src": "server/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "fastapi-backend/main.py",
      "use": "@vercel/python"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/client/browser"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/py/(.*)",
      "dest": "/fastapi-backend/main.py"
    },
    {
      "src": "/api/(.*)",
      "dest": "/server/index.js"
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|jpeg|svg|gif|ico|json|woff|woff2|ttf|eot|txt|webmanifest))",
      "dest": "/client/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/client/index.html"
    }
  ]
}